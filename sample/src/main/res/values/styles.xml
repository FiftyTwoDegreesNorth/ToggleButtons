<resources>

	<!-- Base application theme. -->
	<style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
		<!-- Customize your theme here. -->
		<item name="colorPrimary">@color/colorPrimary</item>
		<item name="colorPrimaryDark">@color/colorPrimaryDark</item>
		<item name="colorAccent">@color/colorAccent</item>
		<item name="toggleGroupStyle">@style/Widget.Material.ToggleGroup</item>
		<item name="toggleButtonStyle">@style/Widget.Material.ToggleButton</item>
	</style>

	<style name="PinkToggle" parent="Widget.Material.ToggleButton">
		<item name="android:background">@drawable/selector_pink_on_white</item>
	</style>

	<style name="BlueToggle" parent="Widget.Material.ToggleButton">
		<item name="android:background">@drawable/selector_pink_on_white</item>
	</style>

</resources>
